<h1>Create a Match</h1>

<form role="form" id="create-match">
    <div class="row">
        <div class="col-sm-6">
            <input type="text" placeholder="Search..." class="search form-control">

            {{#each models}}
            <label class="player col-md-3">
                <input type="checkbox" name="player" value="{{id}}">
                <img src="../img/default.jpg" width="96" height="96">
                {{name}}
            </label>
            {{/each}}

            <div class="clear"></div>
        </div><!-- col -->

        <div class="vs"></div>

        <div class="col-sm-6">
            <input type="text" placeholder="Search..." class="search form-control">

            {{#each models}}
            <label class="player col-md-3">
                <input type="checkbox" name="player" value="{{id}}">
                <img src="../img/default.jpg" width="96" height="96">
                {{name}}
            </label>
            {{/each}}

            <div class="clear"></div>
        </div> <!-- col -->
    </div> <!-- row -->

    <div class="row">
        <div class="col-sm-12">
            <h2>Activity</h2>
            <select name="activity" id="activity">
            {{#each activities}}
                <option value="{{id}}">{{name}}</option>
            {{/each}}
            </select>
        </div>
    </div>
</form>
