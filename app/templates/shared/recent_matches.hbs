<h3>Recent Matches</h3>

{{#each context}}
<div class="match h2h">
	<div class="player single a {{#if this.matches_teams.0.winner}}winner{{/if}}">
		<img class="img-thumbnail hidden-xs" src="img/default.jpg" width="56" height="56" alt="">
		<h3>{{this.matches_teams.0.teams.0.name}}</h3>
		<p>12 - 0</p>
	</div>
	<div class="activity ping-pong"></div>
	<div class="player single b {{#if this.matches_teams.1.winner}}winner{{/if}}">
		<img class="img-thumbnail hidden-xs" src="img/default.jpg" width="56" height="56" alt="">
		<h3>{{this.matches_teams.1.teams.0.name}}</h3>
		<p>12 - 0</p>
	</div>
	<div class="clear"></div>
</div> <!-- match -->
{{/each}}